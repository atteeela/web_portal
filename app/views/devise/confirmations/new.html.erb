
<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class=>"form-horizontal" }) do |f| %>
<fieldset>
    <legend>Resend confirmation instructions</legend>
  <%= devise_error_messages! %>

  <div class="control-group">
        <%= f.label :email, :class=>"control-label" %>
        <div class="controls">
            <%= f.email_field :email, :placeholder=>"Email" %>
        </div>
    </div>
<div class="control-group">
        <div class="controls">
            <%= f.submit "Resend confirmation instructions", :class=>"btn" %>
        </div>
    </div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>

