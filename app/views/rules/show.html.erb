<%- model_class = Rule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:_id) %>:</strong></dt>
  <dd><%= @rule._id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @rule.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:content_types) %>:</strong></dt>
  <dd><%= @rule.content_types %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_ip) %>:</strong></dt>
  <dd><%= @rule.client_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cookie_name) %>:</strong></dt>
  <dd><%= @rule.cookie_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cookie_value) %>:</strong></dt>
  <dd><%= @rule.cookie_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:header_name) %>:</strong></dt>
  <dd><%= @rule.header_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:header_value) %>:</strong></dt>
  <dd><%= @rule.header_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sort_index) %>:</strong></dt>
  <dd><%= @rule.sort_index %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rule_path(@rule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rule_path(@rule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
