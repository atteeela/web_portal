<dl class="dl-horizontal">
  
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @account.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @account.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @account.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @account.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @account.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @account.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary_contact) %>:</strong></dt>
  <dd><%= @account.primary_contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary_contact_email) %>:</strong></dt>
  <dd><%= @account.primary_contact_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary_phone) %>:</strong></dt>
  <dd><%= @account.primary_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secondary_phone) %>:</strong></dt>
  <dd><%= @account.secondary_phone %></dd>
  <dt><strong>Created By:</strong></dt>
  <dd><%= @account.user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('Back to Account List'),
              accounts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn' %>
  <% if is_global_admin? %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %> 
</div>